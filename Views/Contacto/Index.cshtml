@model EMPRESA_QBE.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}
<h1>@ViewData["Title"]</h1>


<div class="text-center">
    <form asp-controller="Contacto" asp-action="Create" class="form-horizontal">
        <div class="mb-1 row">
            <label class="control-label col-sm-2" asp-for="Name" >Nombre: </label>
            <div class="col-sm-5">
                <input asp-for="Name" class="form-control form-control-sm" type="text" placeholder="Escribe su nombre" aria-label=".form-control-sm" />    
            </div>
        </div>

        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />

        <label asp-for="Numero" class="control-label"></label>
        <input asp-for="Numero" class="form-control" />

        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control" />

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar</button> 
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>




