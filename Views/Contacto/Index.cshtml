@model EMPRESA_QBE.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}
<h1>@ViewData["Title"]</h1>

<br>
<div class="text">
    <form asp-controller="Contacto" asp-action="Create" class="form-horizontal">
        <div class="mb-1 row">
            <label class="control-label col-sm-2" asp-for="Name">Nombre: </label>
            <div class="col-sm-5">
                <input asp-for="Name" class="form-control form-control-sm" type="text" placeholder="Digite su nombre"
                    aria-label=".form-control-sm" />
            </div>
        </div>

        <div class="mb-1 row">
            <label class="control-label col-sm-2" asp-for="Email" class="control-label">Correo Electronico: </label>
            <div class="col-sm-5">
                <input asp-for="Email" class="form-control form-control-sm" type="text" placeholder="Digite su correo"
                    aria-label=".form-control-sm" />
            </div>
        </div>

        <div class="mb-1 row">
            <label class="control-label col-sm-2" asp-for="Numero" class="control-label">Numero Celular: </label>
            <div class="col-sm-5">
                <input asp-for="Numero" class="form-control form-control-sm" type="text" placeholder="Digite su numero"
                    aria-label=".form-control-sm" />
            </div>
        </div>

        <div class="mb-1 row">
            <label class="control-label col-sm-2" asp-for="Comment" class="control-label">Comentarios: </label>
            <div class="col-sm-5">
                <textarea asp-for="Comment" class="form-control" rows="3" placeholder="Comente"></textarea>
            </div>

        </div>
        <br>
        <div class="text-center">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
            <br>
            <h1>@ViewData["Message"]</h1>
            <div>
                <a asp-action="Index">Volver a la lista</a>
            </div>
        </div>
    </form>

</div>

